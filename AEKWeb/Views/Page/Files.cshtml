@using AEKWeb.Extensions;
@model FilesViewModel

@{
    ViewData["Title"] = "Ältere Kamereren - Filer";
    ViewData["Description"] = "Sida för att ladda ned filer för inloggade";
}

<div class="text-image">

    <div class="image">
        <img src="~/assets/kavaj.jpg" alt="Alte kamereren kavaj" />
    </div>
    <div class="text">
        @if (!Model.IsLoggedIn)
        {
            <p>Du måste vara inloggad för att kunna ladda ned filer</p>
        }
        else
        {
            <h1>Noter till lundakarnevalen</h1>
            <div class="files">
                @foreach (var file in Model.Files)
                {
                    <a href="/File/@(file.Englify())">@file</a>
                }
            </div>
        }
    </div>
</div>
